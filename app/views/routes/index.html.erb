<p id="notice"><%= notice %></p>

<div class="page-header clearfix">
  <h3>Rutas</h3>
</div>

<div class="panel panel-default" id="table_routes">
  <div class="panel-heading clearfix">
    <%= form_tag routes_path+"#tabla", method: 'get' do%>
      <div class="row">
        <div class="col-md-2">
          <%=label_tag "Nombre de Carga"%>
          <%=text_field_tag("by_name_load", value = nil, options = {class: "form-control input-height"}) %>
        </div>
        <div class="col-md-2">
          <%=label_tag "Fecha"%>
          <%=date_field_tag("by_date", value = nil, options = {class: "form-control input-height",min: 0}) %>
        </div>
        <div class="col-md-2">
        <%=label_tag "Hora de Inicio"%>
        <%=text_field_tag('by_hour_start', value = nil, options = {class: "form-control input-height",min: 0})%>
        </div>
      </div><!-- /.row -->
      <div class="row">
        <div class="col-md-12">
          <div class=" botones">
            <%=button_tag(type: "submit",class: "btn btn-info") do%>
              <%= fa_icon 'filter', text:'Filtrar'%>
            <%end%>
            <%=link_to :back,class: "btn btn-warning" do%>
              <%= fa_icon 'trash-o', text: 'Limpiar' %>
            <%end%>

          </div>
        </div>
      </div>
    <%end%>
  </div>
  <div class="panel-body">

      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>

          <tr class="pretty">
            <th>Nombre de Carga</th>
            <th>Ruta</th>
            <th>Fecha</th>
            <th>Hora de inicio</th>
            <th>Hora de fin</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
            <% @routes.each do |route| %>
              <tr>
                <td><%= route.name_load %></td>
                <td><%= route.route %></td>
                <td><%= route.date %></td>
                <td><%= route.hour_start %></td>
                <td><%= route.hour_end %></td>
                <td><%= link_to 'Show', route %></td>
                <td><%= link_to 'Edit', edit_route_path(route) %></td>
                <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

  </div>
</div>

<br>

<%= link_to 'Cargar Rutas', new_route_path %>
